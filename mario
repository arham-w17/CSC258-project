check_leftcol_all_3below:
    lw $t0, 0($t5)
    lw $t1, 128($t5)
    lw $t2, 256($t5)
    lw $t3, 384($t5)
    beq $t0, $t1, lcb1
    j check_leftcol_all_3above

lcb1:
    bne $t1, $t2, check_leftcol_all_3above

lcb2:
    bne $t2, $t3, check_leftcol_all_3above

